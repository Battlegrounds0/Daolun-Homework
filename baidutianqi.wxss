#panel{
  height:65vh;
  background:#fff;
}
#panel text{
  height:50px;
  line-height: 13vh;
  border-right: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
}
.flex-row{
   height:50px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.flex-column{
   height:50px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
}
.flex-cell{
  flex: 1;
}